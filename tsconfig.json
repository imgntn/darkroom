{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "modules/*": ["app/modules/*"],
      "app": ["app/app.js"],
      "app/*": ["app/*"],
      "*": ["*"]
    }
  },
  "include": ["app/**/*"]
}
